mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container
			.row.position-relative
				+e.logo-col.col.col-auto
					a(href="/")
						img(src="img/svg/logo.svg" alt="")
				+e.search-col.col
					+form-wrap()
						+input('Искать в каталоге и материалах...', 'text', undefined, 'search-inp', 'search-inp-wrap')
							+e.BUTTON.scope-btn
								+icon('scope')
							+e.tags-list
								+e.tag-link(href="#") Куртки
								+e.tag-link(href="#") Штаны
								+e.tag-link(href="#") Разгрузки
				+e.contact-col.col.col-auto
					a.phone-block(href="tel:+7-916-907-18-73")
						+icon('phone')
						.phone-num +7-916-907-18-73
					a.mail-link(href="mailto:sample@samplemail.org") sample@samplemail.org
				+e.inline-catalog-block.col-12
					+inlineCatalogContent()
				+e.mobile-category-search-strip.d-block.d-md-none.col-12
					.row
						.col
							+e.burger-cont.burger-frame
								span
							+e.SPAN.catalog-txt Каталог товаров
						+e.mobile-search-icon-cont.col-auto
							+icon('cross')
							+icon('scope')

	// end top-nav

